.polaroid {
	border: 1px solid black;
	background: white;
	position: absolute;
	top: 50%;
	left: 50%;
	min-width: 100px;
	min-height: 100px;
}

#content {
	display: none;
	&.shown {
		display: block;
		position: absolute;
		top: 5%;
		bottom: 5%;
		left: 10%;
		right: 10%;
		background: white;
		border: 1px solid black;
	}
}
